<%- include('../../../partials/head.ejs') %> 
    <link rel="stylesheet" type="text/css" href="/css/newAdmin.css">
<%- include('../../../partials/head2.ejs') %> 
    <body>
        <%- include('../../../partials/navAdmin.ejs') %>
        <div class="container mb-5">
            <div class="card" id="cardAdmin">
                <div class="card-header">
                    <hr>
                    <a class="btn btn-success" href="/admin/book/new">Cadastrar Novo Livro</a>
                    <img src="/img/logo_doctum.svg" width="120px" style="float: right;">
                    <hr>
                </div>
            </div>
            <hr>
            <h1 class="display-6" style="text-align: center;">Lista de Livros Disponíveis</h1>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>NOME</th>
                        <th>CATEGORIA</th>
                        <th>AÇÕES</th>
                    </tr>
                </thead>
                <tbody>
                    <% books.forEach(book => { %>
                        <tr>
                            <th><%= book.id %> </th>
                            <th><%= book.name %> </th>
                            <th><%= book.category.title %> </th>
                            <th>
                                <form method="POST" action="/admin/book/delete" style="display: inline;" onsubmit="confirmDelete(event)">
                                    <button class="btn btn-danger" name="id" value="<%= book.id %>">Excluir</button>
                                </form>
                                <a class="btn btn-warning" href="/admin/book/edit/<%= book.id %>">Editar</a>
                            </th>
                        </tr> 
                    <% }) %> 
                </tbody>
            </table>
        </div>
    </body>
<%- include('../../../partials/footer.ejs') %> 