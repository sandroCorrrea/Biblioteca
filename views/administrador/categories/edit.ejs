<%- include('../../../partials/head.ejs') %> 
<link rel="stylesheet" type="text/css" href="/css/newAdmin.css">
<%- include('../../../partials/head2.ejs') %> 
<body>
    <%- include('../../../partials/navAdmin.ejs') %>
    <div class="container mb-5">
        <div class="card" id="cardAdmin">
            <div class="card-header" id="cardText">
                <hr>
                <h1 class="display-6">Atualizar Categoria de Livro</h1>
                <img src="/img/edicaoAdmin.png" class="imgLogo">
                <hr>
            </div>
            <div class="card-body">
                <form method="POST" action="/admin/categories/update">
                    <div class="form-floating">
                        <input type="text" name="title" class="form-control" placeholder=" Ação, Romance" required value="<%= categories.title %> ">
                        <label>Digite o nome da categoria</label>
                    </div>
                    <input type="hidden" value="<%= categories.id %>" name="id">
                    <br><div class="d-grid gap-2 col-6 mx-auto">
                        <button class="btn btn-warning">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
