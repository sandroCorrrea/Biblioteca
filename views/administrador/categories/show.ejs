<%- include('../../../partials/head.ejs') %> 
<link rel="stylesheet" type="text/css" href="/css/newAdmin.css">
<%- include('../../../partials/head2.ejs') %> 
<body>
    <%- include('../../../partials/navAdmin.ejs') %>
    <div class="container mb-5">
        <div class="card" id="cardAdmin">
            <div class="card-header">
                <hr>
                <a class="btn btn-success" href="/admin/categories/new">Cadastrar Nova Categoria</a>
                <img src="/img/logo_doctum.svg" width="120px" style="float: right;">
                <hr>
            </div>
        </div>
        <hr>
        <h1 class="display-6" style="text-align: center;">Lista de Categorias</h1>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>TÍTULO DA CATEGORIA</th>
                    <th>AÇÕES</th>
                </tr>
            </thead>
            <tbody>
                <% categories.forEach(category => { %>
                    <tr>
                        <th><%= category.id %> </th>
                        <th><%= category.title %> </th>
                        <th>
                            <form style="display: inline;" method="POST" action="/admin/categories/delete" onsubmit="confirmDelete(event)">
                                <button class="btn btn-danger" value="<%=category.id%>" name="id">Excluir</button>
                            </form>
                            <a class="btn btn-warning" href="/admin/categories/edit/<%=category.id%>">Editar</a>
                        </th>
                    </tr>
                <% }) %> 
            </tbody>
        </table>
    </div>
</body>
<%- include('../../../partials/footer.ejs') %>