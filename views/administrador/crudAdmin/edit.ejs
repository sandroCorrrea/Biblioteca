<%- include('../../../partials/head.ejs') %> 
    <link rel="stylesheet" type="text/css" href="/css/newAdmin.css">
<%- include('../../../partials/head2.ejs') %> 
    <body>
        <%- include('../../../partials/navAdmin.ejs') %>
        <div class="container mb-5">
            <div class="card" id="cardAdmin">
                <div class="card-header" id="cardText">
                    <hr>
                    <h1 class="display-6">Editar dados do Administrador</h1>
                    <img src="/img/edicaoAdmin.png" class="imgLogo" style="color: white;">
                    <hr>
                </div>
                <div class="card-body">
                    <form method="POST" action="/admin/update">
                        <div class="form-floating">
                            <input type="text" name="name" class="form-control" placeholder=" " required value="<%= admins.name %>">
                            <label>Digite seu nome</label>
                        </div>
                        <br><div class="form-floating">
                            <input type="number" name="cpf" class="form-control" placeholder=" " required value="<%= admins.cpf %>">
                            <label>Digite seu cpf</label>
                        </div>
                        <br><div class="form-floating">
                            <input type="email" name="email" class="form-control" placeholder=" " required value="<%= admins.email %>">
                            <label>Digite seu email</label>
                        </div>
                        <hr><div class="form-floating">
                            <input type="password" name="password" class="form-control" placeholder=" " required value="<%= admins.password %>">
                            <label>Digite sua senha</label>
                        </div>
                        <input type="hidden" type="text" value="<%= admins.id %>" name="id">
                        <br><div class="d-grid gap-2 col-6 mx-auto">
                            <button class="btn btn-warning">Atualizar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </body>
<%- include('../../../partials/footer.ejs') %> 