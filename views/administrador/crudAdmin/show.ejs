<%- include('../../../partials/head.ejs') %> 
    <link rel="stylesheet" type="text/css" href="/css/newAdmin.css">
<%- include('../../../partials/head2.ejs') %> 
    <body>
        <%- include('../../../partials/navAdmin.ejs') %>
        <div class="container mb-5">
            <div class="card" id="cardAdmin">
                <div class="card-header">
                    <hr>
                    <a class="btn btn-success" href="/admin/new">Cadastrar Novo Administrador</a>
                    <img src="/img/logo_doctum.svg" width="120px" style="float: right;">
                    <hr>
                </div>
            </div>
            <hr>
            <h1 class="display-6" style="text-align: center;">Lista de Administradores</h1>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>CPF</th>
                        <th>Nome</th>
                        <th>AÇÕES</th>
                    </tr>
                </thead>
                <tbody>
                    <% admins.forEach(admin => { %>
                        <tr>
                            <th><%= admin.id %> </th>
                            <th><%= admin.cpf %> </th>
                            <th><%= admin.name %> </th>
                            <th>
                                <form style="display: inline;" method="POST" action="/admin/delete" onsubmit="confirmDelete(event)">
                                    <button class="btn btn-danger" value="<%= admin.id %>" name="id">Excluir</button>
                                </form>
                                <a class="btn btn-warning" href="/admin/edit/<%= admin.id %>">Editar</a>
                            </th>
                        </tr>
                    <% }) %> 
                </tbody>
            </table>
        </div>
    </body>
<%- include('../../../partials/footer.ejs') %> 