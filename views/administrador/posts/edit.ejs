<%- include('../../../partials/head.ejs') %> 
<link rel="stylesheet" type="text/css" href="/css/newAdmin.css">
<%- include('../../../partials/head2.ejs') %> 
<body>
    <%- include('../../../partials/navAdmin.ejs') %> 
    <div class="container mb-5">
        <div class="card" id="cardAdmin">
            <div class="card-header" id="cardText">
                <hr>
                <h1 class="display-6">Editar Publicação</h1>
                <img src="/img/edicaoAdmin.png" class="imgLogo">
                <hr>
            </div>
            <div class="card-body">
                <form method="POST" action="/admin/post/update">
                    <div class="form-floating">
                        <input type="text" name="title" class="form-control" placeholder=" " value="<%=posts.title%>" required>
                        <label>Digite um titulo</label>
                    </div>
                    <br><label style="color: white;">Selecione uma categoria</label>
                    <select class="form-select" name="categoryId">
                        <% categories.forEach(category => { %>

                            <% if (category.id == posts.categoryId){ %>
                                <option value="<%= category.id %>" selected><%= category.title %> </option>
                            <% } else { %>
                                <option value="<%= category.id %>"><%= category.title %> </option>
                            <% } %> 
                        <% }) %> 
                    </select>
                    <br>
                    <textarea name="body" class="form-control" id="body">
                        <%=posts.body%>
                    </textarea>
                    <br>
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button class="btn btn-warning">Atualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>
<%- include('../../../partials/footer.ejs') %> 

<script src="/tinymce/js/tinymce/tinymce.min.js"></script>
<script>
    tinymce.init({
        selector: '#body',
        language: 'pt_BR',
        plugins: ['advlist autolink code table hr fullscreen colorpicker image print inserdatetime preview textcolor emoticons']
    })
</script>